<p id="notice"><%= notice %></p>

<h1>EPT´s</h1>

<table>
  <thead>
    <tr>
      <th>Chamado</th>
      <th>Solicitacao</th>
      <th>Orçamento</th>
      <th>Avanço</th>
      <th>Módulo</th>
      <th>Sistema</th>
      <th>Tipo</th>
      <th>Prioridade</th>
      <th>Status</th>
      <th>Área</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @improvements.each do |improvement| %>
      <tr>
        <td><%= improvement.chamado %></td>
        <td><%= improvement.solicitacao %></td>
        <td><%= improvement.horas_orca %></td>        
        <td><%= number_to_percentage(improvement.avanco, precision: 0)  %></td>
        <td><%= improvement.segment.name %></td>
        <td><%= improvement.system.name %></td>
        <td><%= improvement.type.name %></td>
        <td><%= improvement.priority.name %></td>
        <td><%= improvement.status.name %></td>
        <td><%= improvement.area.name %></td>
        <td><%= link_to 'Show', improvement %></td>
        <td><%= link_to 'Edit', edit_improvement_path(improvement) %></td>
        <td><%= link_to 'Destroy', improvement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo EPT´s', new_improvement_path %>
