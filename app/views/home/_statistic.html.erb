                <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: <% if @totalepts == 0 %> 0% <% else %> <%= (@total_ept_teste*100/@totalepts) %>% <% end %>">
                    <span class="sr-only"><% if @totalepts == 0 %> 0% <% else %> <%= (@total_ept_teste*100/@totalepts) %> <% end %></span>
                </div>
            </div>
              <small>Aguardando análise: <%= @total_ept_aguard %></small>
            <div class="progress">
                <div class="progress-bar progress-bar-danger progress-bar-striped active" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: <% if @totalepts == 0 %> 0% <% else %> <%= (@total_ept_aguard*100/@totalepts) %>% <% end %>">
                    <span class="sr-only"><% if @totalepts == 0 %> 0% <% else %> <%= (@total_ept_aguard*100/@totalepts) %> <% end %></span>
                </div>
            </div>
            <small>Em produção: <%= @total_ept_prod %></small>
            <div class="progress">
                <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: <% if @totalepts == 0 %> 0% <% else %> <%= (@total_ept_prod*100/@totalepts) %>% <% end %>">
                    <span class="sr-only"><% if @totalepts == 0 %> 0% <% else %> <%= (@total_ept_prod*100/@totalepts) %> <% end %></span>
                </div>
            </div>
      
      
        </div>
        <!--/panel-body-->
      </div>
      <!--/panel-->